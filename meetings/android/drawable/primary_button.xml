<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/light_grey2" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/meetings_blue_darken" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/meetings_blue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="16dp"
                android:right="6dp"
                android:bottom="16dp" />
        </shape>
    </item>
</selector>